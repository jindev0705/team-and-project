<!DOCTYPE html>
<html>
<head>
  <title>SprintFWD Rails Takehome</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'plugins/plugins.bundle', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'plugins/plugins.bundle' %>
  <%= javascript_include_tag 'common' %>
  <%= csrf_meta_tags %>
</head>

<body id="kt_body" class="header-fixed header-tablet-and-mobile-fixed toolbar-enabled toolbar-fixed toolbar-tablet-and-mobile-fixed"
      style="--kt-toolbar-height:55px;--kt-toolbar-height-tablet-and-mobile:55px">
  <!-- begin:: Page -->
  <div class="d-flex flex-column flex-root">
    <div class="loader-body" style="display: none;">
      <div class="loader"></div>
    </div>
    <div class="page d-flex flex-row flex-column-fluid">

      <div class="wrapper d-flex flex-column flex-row-fluid" id="kt_wrapper" style="padding-top: 100px">

        <div id="kt_header" class="header align-items-stretch">
          <div class="container-fluid d-flex align-items-stretch justify-content-between">
            <div class="d-flex align-items-center flex-grow-1 flex-lg-grow-0 pe-4">
              <span class="fw-bolder fs-1">SprintFWD Rails Takehome</span>
            </div>
          </div>
        </div>

        <div class="content d-flex flex-column flex-column-fluid" id="kt_content" style="padding: 0px">
          <%= yield %>
        </div>

      </div>

    </div>
  </div>
  <!-- end:: Page -->

  <div id="kt_scrolltop" class="scrolltop" data-kt-scrolltop="true">
    <span class="svg-icon">
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
